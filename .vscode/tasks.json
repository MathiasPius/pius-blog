{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "run example",
			"type": "shell",
			"command": "cargo run",
			"group": "build"
		},
		{
			"label": "watch example",
			"type": "shell",
			"command": "cargo watch -x check -s 'touch .trigger' -i '.trigger' & cargo watch --no-gitignore -w '.trigger' -x run",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}